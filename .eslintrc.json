{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "extends": ["airbnb-base"],
  "rules": {
    "no-shadow": "off",
    "no-param-reassign": "off",
    "eol-last": "off",
    "arrow-parens": "off",
    "import/no-unresolved": "off",
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": true
      }
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
